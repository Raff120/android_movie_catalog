<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sfondo trasparente -->
    <item android:drawable="@android:color/transparent" />

    <!-- Bordo colorato -->
    <item>
        <shape android:shape="rectangle">
            <stroke
